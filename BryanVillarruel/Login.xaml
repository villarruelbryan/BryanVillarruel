<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BryanVillarruel.Login">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png" BackgroundColor="#2196F3" AnchorY="30" AnchorX="30" ></Image>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el Usuario"></Entry>
            <Entry x:Name="txtContrasena" Placeholder="Ingrese la Contraseña" IsPassword="True"></Entry>
            <Button x:Name="btnAbrir" Text="Ingresar" Clicked="btnAbrir_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>