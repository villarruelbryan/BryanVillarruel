<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BryanVillarruel.Resumen">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="https://sbsconsulting.com.ec/wp-content/uploads/2018/01/LOGO-UISRAEL-768x209.png" BackgroundColor="#2196F3" AnchorY="30" AnchorX="30" ></Image>
            <Frame BackgroundColor="#2196F3" Padding="0" CornerRadius="0">
                <Label x:Name="lblNombre" HorizontalTextAlignment="End" TextColor="White" FontSize="22"/>
            </Frame>
            <Grid BackgroundColor="#2196F3" RowSpacing="2" ColumnSpacing="2" >
                <Label Grid.Row="0" Grid.Column="0" Text="Nombre: " TextColor="White" FontSize="20"></Label>
                <Label Grid.Row="0" Grid.Column="1" x:Name="txtNombre" TextColor="White" FontSize="20"></Label>
                <Label Grid.Row="1" Grid.Column="0" Text="Total: " TextColor="White" FontSize="20"></Label>
                <Label Grid.Row="1" Grid.Column="1" x:Name="txtTotal" TextColor="White" FontSize="20"></Label>

            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>